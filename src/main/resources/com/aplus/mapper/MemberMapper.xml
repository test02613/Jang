<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aplus.mapper.MemberMapper">
	<insert id="memberJoin">
		insert into book_member values(#{memberId},
		#{memberPw}, #{memberName},
		#{memberMail}, #{memberAddr1},
		#{memberAddr2}, #{memberAddr3}, 0,
		sysdate, 100000, 5000 )
	</insert>
	<select id="findId" parameterType="MemberVO" resultType="String">
		select memberId from book_member where memberMail = #{memberMail}
	</select>
	<select id="loginAction"  parameterType="MemberVO" resultType ="String" >
		
			SELECT * FROM book_member 
	    WHERE MEMBERID = #{memberId}
	    AND MEMBERPW = #{memberPw}
		
	</select>
	<!-- 아이디 중복검사 -->
	<select id="idCheck" resultType="int">
		select count(*) from book_member where memberId = #{memberId}
	</select>
</mapper>
